<Window x:Class="EventsSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventsSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="170" Width="425">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,40,0,0">
            <Button Name="btn_launch" Content="Launch Second Window" Width="150" Height="22" Click="btn_launch_Click"/>
            <Button Name="btn_refresh" IsEnabled="False" Content="Refresh" Width="100" Height="22" Margin="0,10,0,0" Click="btn_refresh_Click"/>
        </StackPanel>
    </Grid>
</Window>
